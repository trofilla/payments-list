{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@vn/internal-payments-data-access": [
        "libs/payments-list/data-access/src/index.ts"
      ],
      "@vn/internal-payments-list-feature": [
        "libs/payments-list/feature/src/index.ts"
      ],
      "@vn/internal-payments-list-ui": [
        "libs/payments-list/ui/src/index.ts"
      ],
      "@vn/internal-payments-list-util": [
        "libs/payments-list/util/src/index.ts"
      ],
      "@vn/payments-list-ang": [
        "libs/payments-list/main/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
